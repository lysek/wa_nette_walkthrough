{block title}
Vypis osob
{/block}

{block content}
<table>
	<tr>
		<th>Jm√©no</th>
		<th>Adresa</th>
		<th>Smazat</th>
	</tr>
{foreach $persons as $p}
	<tr>
		<td>
			{$p->first_name} {$p->last_name}
		</td>
		<td>
			{if $p->ref('locations', 'id_location')}
				{$p->ref('locations', 'id_location')->city}, {$p->ref('locations', 'id_location')->street_name} {$p->ref('locations', 'id_location')->street_number}
			{else}
				Nema adresu.
			{/if}
		</td>
		<td>
			<form action="{link Persons:delete}" onsubmit="return confirm('Opravdu smazat osobu?')" method="post">
				<input type="hidden" name="id" value="{$p->id}" />
				<input type="submit" value="Smazat" />
			</form>
		</td>
	</tr>
{/foreach}
</table>
{/block}